set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch

syntax enable
set encoding=utf8

set expandtab
set smarttab
set smartindent
set shiftwidth=4
set tabstop=4

set cc=80
set background=dark
set nowrap

autocmd Syntax c,cpp,cs setlocal foldmethod=syntax
autocmd Syntax c,cpp,cs normal zR
